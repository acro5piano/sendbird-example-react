{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "noLib": false,
    "skipLibCheck": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "strict": true,
    "types": ["node", "webpack-env"],
    "lib": ["dom", "es2015", "es2016", "es2017", "esnext.asynciterable"],
    "baseUrl": "./",
    "paths": {
      "bokulog/*": ["./src/*"]
    }
  },
  "parcelTsPluginOptions": {
    "transpileOnly": true
  },
  "include": ["./src/**/*", "node_modules/@types/jest"],
  "exclude": ["dist", "static"]
}
